// Transitions
.fade-enter-active, .fade-leave-active
    transition: opacity .4s 1000

.fade-enter, .fade-leave-to
    opacity: 0


.fade-enter-active, .fade-leave-active
    transition: all .4s 800

.fade-enter, .fade-leave-to
    opacity: 1





@keyframes transOut
    0%
        top 100%
    100%
        top 0

@keyframes transIn
    0%
        top 0
    100%
        top -100%



.page-enter,
.page-enter-active
    transition all .3s ease-out
    &::after
        content ""
        position fixed
        top 0
        left 0
        width 100%
        height 100%
        z-index 999
        transition all 1s ease-in-out
        background-color #f6f6f6
        animation transIn .3s ease-in-out forwards

.page-leave-active,
.page-leave
    transition all .6s ease-in-out
    &::after
        content ""
        position fixed
        top 100%
        left 0
        width 100%
        height 100%
        z-index 1000
        transition all 1s ease-in
        background-color #f6f6f6
        animation transOut .6s ease-in-out forwards
