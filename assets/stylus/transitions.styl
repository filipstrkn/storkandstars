// ////////////////////////////////////////////////////////////////////////////
//                                    MENU                                   //
// ////////////////////////////////////////////////////////////////////////////
.menu-enter,
.menu-leave-to
    &::after
        opacity 0 !important
    #MenuBody
        transform: translateX(100%)

.menu-leave,
.menu-enter-to
    &::after
        opacity 1 !important
    #MenuBody
        transform: translateX(0%)


.menu-leave-active
    transition-duration 250ms
    &::after
        transition opacity 250ms ease
    #MenuBody
        transition transform 250ms cubic-bezier(0.445, 0.05, 0.55, 0.95)


.menu-enter-active
    transition-duration 1s
    &::after
        transition opacity .4s ease
    #MenuBody
        transition transform .4s cubic-bezier(0.445, 0.05, 0.55, 0.95)


