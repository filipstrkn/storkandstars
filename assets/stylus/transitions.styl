// ////////////////////////////////////////////////////////////////////////////
//                                    FADE                                   //
// ////////////////////////////////////////////////////////////////////////////
.fade-enter-active, .fade-leave-active
    transition: opacity .4s 1000

.fade-enter, .fade-leave-to
    opacity: 0


.fade-enter-active, .fade-leave-active
    transition: all .4s 800

.fade-enter, .fade-leave-to
    opacity: 1



// ////////////////////////////////////////////////////////////////////////////
//                                    PAGE                                   //
// ////////////////////////////////////////////////////////////////////////////
.page-enter-active,
.page-leave-active
    transition all 1s
    &::after
        content ""
        position fixed
        left 0
        width 100%
        height 100%
        z-index 101
        background-color #f9f9fa
        transition all .6s

.page-enter::after
    top 0

.page-enter-to::after
    top -100%

.page-leave::after
    top 100%

.page-leave-to::after
    top 0



// ////////////////////////////////////////////////////////////////////////////
//                                    MENU                                   //
// ////////////////////////////////////////////////////////////////////////////
.menu-enter,
.menu-leave-to
    &::after
        opacity 0 !important
    #MenuBody
        transform: translateX(100%)

.menu-leave,
.menu-enter-to
    &::after
        opacity 1 !important
    #MenuBody
        transform: translateX(0%)


.menu-leave-active
    transition-duration 250ms
    &::after
        transition opacity 250ms ease
    #MenuBody
        transition transform 250ms cubic-bezier(0.445, 0.05, 0.55, 0.95)


.menu-enter-active
    transition-duration 1s
    &::after
        transition opacity .4s ease
    #MenuBody
        transition transform .4s cubic-bezier(0.445, 0.05, 0.55, 0.95)


