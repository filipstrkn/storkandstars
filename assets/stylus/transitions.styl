// ////////////////////////////////////////////////////////////////////////////
//                                    FADE                                   //
// ////////////////////////////////////////////////////////////////////////////
.fade-enter-active, .fade-leave-active
    transition: opacity .4s 1000

.fade-enter, .fade-leave-to
    opacity: 0


.fade-enter-active, .fade-leave-active
    transition: all .4s 800

.fade-enter, .fade-leave-to
    opacity: 1



// ////////////////////////////////////////////////////////////////////////////
//                                    PAGE                                   //
// ////////////////////////////////////////////////////////////////////////////
.page-enter-active, .page-leave-active
  transition: opacity .6s
.page-enter, .page-leave-active
  opacity 0



// ////////////////////////////////////////////////////////////////////////////
//                                    MENU                                   //
// ////////////////////////////////////////////////////////////////////////////
.menu-enter,
.menu-leave-to
    &::after
        opacity 0 !important
    #MenuBody
        transform: translateX(-100%)
        box-shadow none

.menu-leave,
.menu-enter-to
    &::after
        opacity 1 !important
    #MenuBody
        transform: translateX(0%)
        box-shadow 3px 0 30px 0 alpha($black, .04), 1px 0 0 0 alpha(#000, 0)


.menu-leave-active
    transition-duration 250ms
    &::after
        transition all 250ms ease
    #MenuBody
        transition all 250ms cubic-bezier(0.445, 0.05, 0.55, 0.95)


.menu-enter-active
    transition-duration 1s
    &::after
        transition all .4s ease
    #MenuBody
        transition all .4s cubic-bezier(0.445, 0.05, 0.55, 0.95)




// ////////////////////////////////////////////////////////////////////////////
//                                    LOGO                                   //
// ////////////////////////////////////////////////////////////////////////////
.logo-slide-enter-active
    animation 'logo-slide-in' 250ms ease-in

.logo-slide-leave-active
    animation 'logo-slide-out' 250ms ease-out

@keyframes logo-slide-in
    0%
        opacity 0
        top 20%

    100%
        opacity 1
        top 0

@keyframes logo-slide-out
    0%
        opacity 1
        top 0

    100%
        opacity 0
        top -60%