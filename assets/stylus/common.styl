@import '~assets/stylus/variables'
@import '~assets/stylus/mixins'
@import '~assets/stylus/transitions'



.title--h2
    font-size: 1.8rem


.title--h3
    font-size: 1.6rem
    margin-bottom 1.6rem


._subtitle
    font-family: $main-font
    font-size: 1.2rem
    font-weight: 600
    color: $blue


._image--loading
    background-color alpha($black, .05)
    animation loading 2s ease-in-out infinite
    width: 100%
    height @width




._thumbnail
    position relative
    overflow hidden

    img
        absolute-centering()


._clickable
    cursor pointer !important


// ////////////////////////////////////////////////////////////////////////////
//                                   LINK                                    //
// ////////////////////////////////////////////////////////////////////////////
._link
    position relative
    &::after
        content ""
        position absolute
        width 0
        height 3px
        background-color $blue
        bottom - @height
        left 0
        transition width 400ms ease-out
     &:hover
        &::after
            width 100%



// ////////////////////////////////////////////////////////////////////////////
//                                   TEXT                                    //
// ////////////////////////////////////////////////////////////////////////////
._text
    a
        position: relative
        &::after
            content: ""
            position: absolute
            left 0
            bottom: .1em
            height .4em
            width: calc(100% - .5em)
            background-color: alpha($purple, .85)
            transition: width 250ms ease-in-out
            z-index -1

        &:hover::after
            width: 100%


    em
        background-color alpha($black, .05)

.__text
    font-family $serif
    font-weight 300
    line-height 2em
    h1, p
        font-weight: inherit
        font-size: inherit


._text--large
    @extend .__text
    font-size calc(16px + 10 * ((100vw - 320px) / 680))

._text--medium
    @extend .__text
    font-size calc(.00848 * 100vw + 15.81818px)



// ////////////////////////////////////////////////////////////////////////////
//                                 CONTAINER                                 //
// ////////////////////////////////////////////////////////////////////////////
.__container
    width: 100%
    padding: 5% 2rem
    margin-left: 10%

._container--large
    @extend .__container
    width: 80vw
    max-width 27em



._container--center
    @extend .__container
    max-width 32em
    margin 0 auto











._container--thumb
    position relative

    & > h3,
    & > .text
        position relative
        margin 0
        z-index 2
        transition color $duration ease-in-out
        color: inherit !important

        span
            font-weight 400
            font-size .8em

        h3
            font-size: 5vw


._content
    position relative
    max-width 26em
    // padding: 3em
    margin-left: 8%
    // font-size 3em
    // margin 10% auto
    margin 10rem 5% 10rem 12%
    line-height 1.5
    padding: 4em 0 0 8%

._section__intro
    position absolute
    // top -4em
    top 0
    left 0
    width 1rem
    white-space nowrap
    font-size: 1rem
    font-size: 3rem
    font-weight: 600
    text-transform: uppercase
    font-family $secondary-font
    // transform rotate(-90deg)
    // &::after
    //     content: ""
    //     width: 3em
    //     height 1px
    //     background-color: black
    //     display: inline-block
    //     vertical-align: middle
    //     margin-left: 1em


._button
    display flex
    justify-content: center
    align-items: center
    // padding 1em .6em
    padding 0 .6em
    position relative
    text-align center
    font-size 1rem
    font-weight 700
    font-family $secondary-font
    color $white
    line-height normal
    width 14em
    height 3.4em
    transition background-color 250ms ease-out
    border-radius 30em
    background-color $blue

    &:hover
        background-color $blue - 20
    &:active
        background-color $blue - 40

    &--large
        @extend ._button
        width: 16em




._page
    display flex
    flex-direction column
    min-height 100vh

._page__content
    flex-shrink: 0
    flex-grow: 1