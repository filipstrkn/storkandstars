._image--loading
    background-color alpha($black, .05)
    animation loading 2s ease-in-out infinite
    width: 100%
    height @width




._thumbnail
    position relative
    // width: 70vh
    // height 40vh
    // max-width: 80vw
    overflow hidden

    img
        absolute-centering()
        // min-height 100%
        width 100%


._clickable
    cursor pointer !important


// ////////////////////////////////////////////////////////////////////////////
//                                   LINK                                    //
// ////////////////////////////////////////////////////////////////////////////
._link
    position relative
    font-family: $secondary-font
    cursor pointer

    &--vert
        @extend ._link
        transform: rotate(90deg)



// ////////////////////////////////////////////////////////////////////////////
//                                   TEXT                                    //
// ////////////////////////////////////////////////////////////////////////////
._text
    a
        position: relative
        &::after
            content: ""
            position: absolute
            left 0
            bottom: .1em
            height .4em
            width: calc(100% - .5em)
            background-color: alpha($purple, .85)
            transition: width 250ms ease-in-out
            z-index -1

        &:hover::after
            width: 100%


    em
        background-color alpha($black, .05)



._text--large
    font-size calc(16px + 12 * ((100vw - 320px) / 680))

._text--medium
    font-size calc(16px + 8 * ((100vw - 320px) / 680))



// ////////////////////////////////////////////////////////////////////////////
//                                 CONTAINER                                 //
// ////////////////////////////////////////////////////////////////////////////
.__container
    width: 100%
    padding: 5% 2rem
    margin-left: 10%
    line-height 2em

    h3
        font-size: 1rem
        font-weight: 400
        opacity .6

._container--large
    @extend .__container
    width: 80vw
    max-width 27em



._container--center
    @extend .__container
    max-width 30em
    margin 0 auto











._container--thumb
    position relative

    & > h3,
    & > .text
        position relative
        margin 0
        z-index 2
        transition color $duration ease-in-out
        color: inherit !important

        span
            font-weight 400
            font-size .8em

        h3
            font-size: 5vw


._content
