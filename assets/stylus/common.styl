._container--thumb
    position relative

    & > h3,
    & > .text
        position relative
        margin 0
        z-index 2
        transition color $duration ease-in-out
        color: inherit !important

        span
            font-weight 400
            font-size .8em

        h3
            font-size: 5vw



._container
    padding: 0 16%