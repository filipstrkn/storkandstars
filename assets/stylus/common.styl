@import '~assets/stylus/variables'
@import '~assets/stylus/mixins'
@import '~assets/stylus/transitions'



.title--h2
    font-size: 1.8rem

.title--h3
    font-size: 1.6rem
    margin-bottom 1.6rem


.link
    font-weight 400
    font-size 1rem
    font-style normal
    position relative
    z-index 2
    color alpha($black, .65)
    &:hover
        color: $black
    &::before
        content "+"
        display inline-block
        font-weight bold
        margin-right .5em



._image--loading
    background-color #fafafa
    animation loading 2s ease-in-out infinite
    width: 100%
    height @width




._thumbnail
    position relative
    width $thumb-size - 20
    height $thumb-size
    overflow hidden

    img
        absolute-centering()
        min-height 100%
        min-width 100%




._link--underlined
    position relative
    font-size 2em
    font-weight: 300
    z-index 2
    transition: color 400ms ease-in-out

    &::before,
    &::after
        content ""
        display block
        position absolute
        bottom -.1em
        height 1px
        width .7em
        left: 0
        background-color #000
        transition: left 400ms ease-in-out, width 400ms ease-in-out, opacity 200ms ease-in-out

    &::before
        left: -4em
        width .7em
        opacity 0

    &:hover
        &::before
            left: 0
            opacity 1
            width 100%
            transition: left 250ms ease-in-out, width 250ms ease-in-out, opacity 400ms ease-in-out
            transition-delay: 200ms
        &::after
            left 10em
            opacity 0
            transition: left 400ms ease-in-out, width 400ms ease-in-out, opacity 400ms ease-in-out
            // width: 100%



